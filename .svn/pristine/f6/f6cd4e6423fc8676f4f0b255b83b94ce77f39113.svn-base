<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f3"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/main_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            tool:text="哈哈哈"
            android:layout_gravity="end"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/tv_phone"
            android:drawableRight="@mipmap/ic_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_font_middle"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/shape_white_transport_radius_bg"
            tool:text="电话:11111111111"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="160dp"
        android:padding="10dp">
        <FrameLayout

            android:layout_margin="6dp"
            android:layout_weight="1"
            android:id="@+id/ll_scan"
            android:visibility="gone"
            android:padding="10dp"

            android:background="@drawable/shape_radius_white_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:paddingBottom="40dp"
                android:src="@mipmap/ic_scan"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_gravity="center_horizontal|bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/scan"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/main_font_big" />
        </FrameLayout>

        <FrameLayout
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:id="@+id/ll_my_student"
            android:background="@drawable/shape_radius_white_bg"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:paddingBottom="40dp"
                android:src="@mipmap/ic_my_student"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_gravity="center_horizontal|bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/student"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/main_font_big" />
        </FrameLayout>

        <FrameLayout
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:id="@+id/ll_logout"
            android:background="@drawable/shape_radius_white_bg"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:paddingBottom="40dp"
                android:src="@mipmap/ic_logout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/logout"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/main_font_big" />
        </FrameLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?attr/borderlessButtonStyle"
        android:src="@mipmap/arrow_back"/>



</FrameLayout>
